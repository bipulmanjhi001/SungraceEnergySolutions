<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1800b3f4"
    tools:context="com.afaque.rsgss.sungraceSupport.HomeComplaintActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0c00b3f4">
        <RelativeLayout
            android:id="@+id/first_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/manually_reg_text"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register your complaint"/>
            <Button
                android:id="@+id/manually_reg_btn"
                android:layout_below="@+id/manually_reg_text"
                android:layout_marginTop="20dp"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginBottom="15dp"
                android:text="Register New Complaint"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button_box"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/second_layout"
            android:layout_below="@+id/first_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/complaint_status_text"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textSize="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Find the present status of already registered complaint"/>
            <Button
                android:id="@+id/complaint_status"
                android:layout_below="@+id/complaint_status_text"
                android:layout_marginTop="10dp"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:text="complaint Status"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button_box"
                android:layout_marginBottom="15dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/third_layout"
            android:layout_below="@+id/second_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:padding="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/first_text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="15dp"
                android:text="Search your CRN"/>
            <EditText
                android:id="@+id/mobileNo_et"
                android:layout_below="@+id/first_text1"
                android:layout_marginTop="10dp"
                android:layout_width="220sp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:textSize="16dp"
                android:maxLength="10"
                android:inputType="number"
                android:hint="Registered Mobile Number"
                android:background="@drawable/edit_box"/>
            <Button
                android:id="@+id/searchCRNbtn"
                android:layout_below="@+id/first_text1"
                android:layout_toRightOf="@+id/mobileNo_et"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="SEARCH"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/button_box"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/fourth_layout"
            android:layout_below="@+id/third_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/footer_text"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textSize="15dp"
                android:text="Complaint can also be registered on our Customer Support Number"/>
            <TextView
                android:id="@+id/tollfreeno_text"
                android:layout_below="@+id/footer_text"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:text="+91 9505771155"/>
            <TextView
                android:id="@+id/or_text"
                android:layout_below="@+id/tollfreeno_text"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="16dp"
                android:textColor="#000"
                android:text="or"/>
            <TextView
                android:id="@+id/email_text"
                android:layout_below="@+id/or_text"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="16dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:text="Email: service@sungrace.co"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@+id/fourth_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/logo"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:src="@mipmap/logo2"/>
            <TextView
                android:id="@+id/bottom_text"
                android:layout_below="@+id/logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="12dp"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:text="Sungrace Energy Solutions Pvt Ltd"/>
        </RelativeLayout>
    </RelativeLayout>
    </ScrollView>


