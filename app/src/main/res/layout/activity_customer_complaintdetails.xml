<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1800b3f4"
    tools:context="com.afaque.rsgss.sungraceSupport.CustomerComplaintdetailsActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <TextView
                android:id="@+id/cuid_text"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="CUID No."/>
            <TextView
                android:id="@+id/cuid"
                android:layout_toRightOf="@+id/cuid_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text=": XXXXXXXXXX"/>
            <TextView
                android:id="@+id/product_cat_text"
                android:layout_below="@+id/cuid_text"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="PRODUCT CATEGORY"/>
            <TextView
                android:id="@+id/product_category"
                android:layout_below="@+id/cuid"
                android:layout_toRightOf="@+id/product_cat_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text=": XXXXXXXXXX"/>
            <TextView
                android:id="@+id/product_type_text"
                android:layout_below="@+id/product_cat_text"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="PRODUCT TYPE"/>
            <TextView
                android:id="@+id/product_type"
                android:layout_below="@+id/product_category"
                android:layout_toRightOf="@+id/capacity_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text=": XXXXXXXXXX"/>
            <TextView
                android:id="@+id/capacity_text"
                android:layout_below="@+id/product_type_text"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="CAPACITY"/>
            <TextView
                android:id="@+id/capacity"
                android:layout_below="@+id/product_type"
                android:layout_toRightOf="@+id/capacity_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text=": XXXXXXXXXX"/>
            <TextView
                android:id="@+id/customer_name_text"
                android:layout_below="@+id/capacity_text"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="CUSTOMER NAME"/>
            <TextView
                android:id="@+id/customer_name"
                android:layout_below="@+id/capacity"
                android:layout_toRightOf="@+id/customer_name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text=": XXXXXXXXXX"/>
            <TextView
                android:id="@+id/address_text"
                android:layout_below="@+id/customer_name_text"
                android:textColor="#000"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:text="ADDRESS"/>
            <TextView
                android:id="@+id/address"
                android:layout_below="@+id/customer_name"
                android:layout_toRightOf="@+id/address_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text=": XXXXXXXXXX"/>
            <TextView
                android:id="@+id/city_text"
                android:layout_below="@+id/address_text"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="VILLAGE/CITY"/>
            <TextView
                android:id="@+id/city"
                android:layout_below="@+id/address"
                android:layout_toRightOf="@+id/city_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text=": XXXXXXXXXX"/>
            <TextView
                android:id="@+id/district_text"
                android:layout_below="@+id/city_text"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="DISTRICT"/>
            <TextView
                android:id="@+id/district"
                android:layout_below="@+id/city"
                android:layout_toRightOf="@+id/district_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text=": XXXXXXXXXX"/>
            <TextView
                android:id="@+id/state_text"
                android:layout_below="@+id/district_text"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="STATE"/>
            <TextView
                android:id="@+id/state"
                android:layout_below="@+id/district"
                android:layout_toRightOf="@+id/state_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text=": XXXXXXXXXX"/>
            <EditText
                android:id="@+id/border_line1"
                android:layout_below="@+id/state_text"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edit_border_line"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
            <TextView
                android:id="@+id/contact_person_text"
                android:layout_below="@+id/border_line1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="#303030"
                android:text="CONTACT PERSON NAME"/>
            <EditText
                android:id="@+id/contact_person_name"
                android:layout_below="@+id/contact_person_text"
                android:background="@drawable/edit_box"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:textSize="13dp"
                android:hint="CONTACT PERSON NAME"
                android:layout_height="40dp"/>
            <TextView
                android:id="@+id/mobile_no_text"
                android:layout_below="@+id/contact_person_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="#303030"
                android:text="MOBILE No*"/>
            <EditText
                android:id="@+id/mobile_no"
                android:layout_below="@+id/mobile_no_text"
                android:background="@drawable/edit_box"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:textSize="13dp"
                android:hint="MOBILE NO*"
                android:layout_height="40dp"/>
            <TextView
                android:id="@+id/aternate_no_text"
                android:layout_below="@+id/mobile_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="#303030"
                android:text="ALTERNATE CONTACT No"/>
            <EditText
                android:id="@+id/alternate_no"
                android:layout_below="@+id/aternate_no_text"
                android:background="@drawable/edit_box"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:textSize="13dp"
                android:hint="ALTERNATE NO"
                android:layout_height="40dp"/>
            <TextView
                android:id="@+id/email_text"
                android:layout_below="@+id/alternate_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="#303030"
                android:text="E-MAIL ID"/>
            <EditText
                android:id="@+id/email_id"
                android:layout_below="@+id/email_text"
                android:background="@drawable/edit_box"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:textSize="13dp"
                android:hint="E-MAIL ID"
                android:layout_height="40dp"/>
            <TextView
                android:id="@+id/complaint_type_text"
                android:layout_below="@+id/email_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="#303030"
                android:text="COMPLAINT TYPE*"/>
            <Spinner
                android:id="@+id/complaint_type_spinner"
                android:layout_below="@+id/complaint_type_text"
                android:background="@drawable/edit_box"
                android:layout_width="match_parent"
                android:layout_height="40dp">
            </Spinner>
            <TextView
                android:id="@+id/controller_serial_no_text"
                android:layout_below="@+id/complaint_type_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="#303030"
                android:text="CONTROLLER Serial NO.*"/>
            <EditText
                android:id="@+id/controller_serial_no"
                android:layout_below="@+id/controller_serial_no_text"
                android:background="@drawable/edit_box"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:textSize="13dp"
                android:hint="CONTROLLER Serial NO.*"
                android:layout_height="40dp"/>
            <TextView
                android:id="@+id/problem_nature_text"
                android:layout_below="@+id/controller_serial_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="#303030"
                android:text="NATURE OF PROBLEM*"/>
            <EditText
                android:id="@+id/problem_nature"
                android:layout_below="@+id/problem_nature_text"
                android:background="@drawable/edit_box"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:textSize="13dp"
                android:hint="NATURE OF PROBLEM*"
                android:layout_height="100dp"/>
            <TextView
                android:id="@+id/snapshot_text_1"
                android:layout_below="@+id/problem_nature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textStyle="bold"
                android:textColor="#303030"
                android:text="SNAPSHOT-1"/>
            <ImageView
                android:id="@+id/snapshot_1"
                android:layout_below="@+id/snapshot_text_1"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:padding="30dp"
                android:background="@drawable/edit_box"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_camera"/>
            <TextView
                android:id="@+id/snapshot_text_2"
                android:layout_below="@+id/snapshot_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textStyle="bold"
                android:textColor="#303030"
                android:text="SNAPSHOT-2"/>
            <ImageView
                android:id="@+id/snapshot_2"
                android:layout_below="@+id/snapshot_text_2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:padding="30dp"
                android:background="@drawable/edit_box"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_camera"/>
            <Button
                android:id="@+id/manually_reg_btn"
                android:layout_below="@+id/snapshot_2"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="register complaint"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button_box"/>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>