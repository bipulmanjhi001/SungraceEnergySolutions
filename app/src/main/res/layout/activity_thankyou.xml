<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1800b3f4"
    android:layout_gravity="center"
    tools:context="com.afaque.rsgss.sungraceSupport.ThankyouActivity">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/layoytFirst"
        android:gravity="center"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/thankyou_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15dp"
            android:text="Your complaint registered successfully "/>
        <TextView
            android:id="@+id/complaint_no_text"
            android:layout_below="@+id/thankyou_text"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:gravity="center"
            android:text="Your Complaint No."/>
        <TextView
            android:id="@+id/complaint_no"
            android:layout_below="@+id/complaint_no_text"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="18dp"
            android:text="CRNXXXXXXXXX"/>

        <TextView
            android:id="@+id/addressed_text"
            android:layout_below="@+id/complaint_no"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15dp"
            android:text="Will be addressed shortly"/>
        <TextView
            android:id="@+id/footer_text"
            android:layout_below="@+id/addressed_text"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15dp"
            android:text="Please make a note of your complaint number for future reference"/>
        <TextView
            android:id="@+id/footer_thanks_text"
            android:layout_below="@+id/footer_text"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="Thank You"/>
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/buttonGrp_layout"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <Button
            android:id="@+id/homebtn"
            android:layout_width="0sp"
            android:layout_weight="6"
            android:layout_height="match_parent"
            android:background="@drawable/button_box"
            android:textColor="#fff"
            android:text="Home"
            android:layout_marginRight="1dp"/>
        <Button
            android:id="@+id/exitbtn"
            android:layout_width="0sp"
            android:layout_weight="6"
            android:layout_height="match_parent"
            android:background="@drawable/button_box_blue"
            android:layout_marginLeft="1dp"
            android:textColor="#fff"
            android:text="Exit"/>
    </LinearLayout>


</RelativeLayout>
</LinearLayout>